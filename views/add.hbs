<form method="post">
    <div class="card">
        <h4 class="card-header">
            New Product
        </h4>
        <div class="card-body">
            <div class="form-group">
                <label for="txtProName">Product Name</label>
                <input type="text" class="form-control" id="txtProName" name="ProName" autofocus>
            </div>
            <div class="form-group">
                <label for="txtProType">Select type:</label>
                <select class="form-control" id="sel1" name="ProType">
                    {{#each this.typeList}}
                        <option>{{MaLoai}} - {{TenLoai}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="txtProSup">Select supplier:</label>
                <select class="form-control" id="sel2" name="ProSup">
                    {{#each this.supList}}
                        <option>{{MaNhaCungCap}} - {{TenNhaCungCap}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="txtProCountry">Product Country</label>
                <input type="text" class="form-control" id="txtProCountry" name="ProCountry">
            </div>
            <div class="form-group">
                <label for="txtProPrice">Product Price</label>
                <input type="text" class="form-control" id="txtProPrice" name="ProPrice">
            </div>
            <div class="form-group">
                <label for="txtProSize">Product Size</label>
                <input type="text" class="form-control" id="txtProSize" name="ProSize">
            </div>
            <div class="form-group">
                <label for="txtProCount">Select type:</label>
                <select class="form-control" id="sel3" name="ProCount">
                    <option>Kg</option>
                    <option>Cai</option>
                </select>
            </div>
            <div class="form-group">
                <label for="txtProDes">Product Description</label>
                <input type="text" class="form-control" id="txtProDes" name="ProDes">
            </div>
        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-outline-success" href="/admin/products/1" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>