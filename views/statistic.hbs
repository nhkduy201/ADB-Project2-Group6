{{section_css}}
<style>
    .scrollable-menu {
        height: auto;
        max-height: 200px;
        overflow-x: hidden;
    }
</style>
{{_sections.css}}

<div class="dropdown mb-3">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Lọc
    </button>
    <div class="dropdown-menu scrollable-menu" aria-labelledby="dropdownMenuButton">
        {{#each this.dates}}
            <a class="dropdown-item" href="/admin/products/statistic?date={{this}}">{{this}}</a>
        {{/each}}
    </div>
</div>

<div style="background-color: white">
    <table class="table table-hover table-bordered">
        <thead class="thead-light">
        <tr>
            <th scope="col">Loại thu nhập</th>
            <th scope="col">Tổng</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="/admin/statistic/bill?year={{this.year}}&month={{this.month}}&page=1">Hóa Đơn</a></td>
                <td>{{format_price this.TongHoaDon}}</td>
            </tr>
            <tr>
                <td><a href="/admin/statistic/exchange?year={{this.year}}&month={{this.month}}&page=1">Đổi hàng</a></td>
                <td>{{format_price this.TongDoiHang}}</td>
            </tr>
            <tr>
                <td><a href="/admin/statistic/import?year={{this.year}}&month={{this.month}}&page=1">Nhập hàng</a></td>
                <td>{{format_price this.TongNhapHang}}</td>
            </tr>
            <tr>
                <td><a href="/admin/statistic/export?year={{this.year}}&month={{this.month}}&page=1">Xuất hàng</a></td>
                <td>{{format_price this.TongXuatHang}}</td>
            </tr>
            <tr>
                <th scope="row">Tổng chi phí</th>
                <td>{{format_price this.TongChiPhi}}</td>
            </tr>
        </tbody>
    </table>
</div>
