<form method="post">
    <div class="card">
        <h4 class="card-header">
            Edit Category
        </h4>
        <div class="card-body">
            <div class="form-group">
                <label for="txtProID">#</label>
                <input type="text" class="form-control" id="txtProID" name="ProID" readonly value="{{this.product.MaSanPham}}">
            </div>
            <div class="form-group">
                <label for="txtProName">Product Name</label>
                <input type="text" class="form-control" id="txtProName" name="ProName" value="{{this.product.TenSanPham}}" autofocus>
            </div>
            <div class="form-group">
                <label for="txtProType">Select type:</label>
                <select class="form-control" id="sel1" name="ProType">
                    <option selected="selected">{{this.product.MaLoai}} - {{this.product.TenLoai}}</option>
                    {{#each this.typeList}}
                        <option>{{MaLoai}} - {{TenLoai}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="txtProSup">Select supplier:</label>
                <select class="form-control" id="sel2" name="ProSup">
                    <option selected="selected">{{this.product.MaNhaCungCap}} - {{this.product.TenNhaCungCap}}</option>
                    {{#each this.supList}}
                        <option>{{MaNhaCungCap}} - {{TenNhaCungCap}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="txtProCountry">Product Country</label>
                <input type="text" class="form-control" id="txtProCountry" name="ProCountry" value="{{this.product.QuocGiaSanXuat}}">
            </div>
            <div class="form-group">
                <label for="txtProSize">Product Size</label>
                <input type="text" class="form-control" id="txtProSize" name="ProSize" value={{this.product.KichThuoc}}>
            </div>
            <div class="form-group">
                <label for="txtProCount">Select type:</label>
                <select class="form-control" id="sel3" name="ProCount">
                    <option selected="selected">{{this.product.DonViDoLuong}}</option>
                    <option>Kg</option>
                    <option>Cai</option>
                </select>
            </div>
            <div class="form-group">
                <label for="txtProDes">Product Description</label>
                <input type="text" class="form-control" id="txtProDes" name="ProDes" value="{{this.product.MoTaChiTiet}}">
            </div>
        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-outline-success" href="/admin/products/1" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List
            </a>
            <button type="submit" class="btn btn-danger" formaction="/admin/products/del">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete
            </button>
            <button type="submit" class="btn btn-primary" formaction="/admin/products/patch">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>